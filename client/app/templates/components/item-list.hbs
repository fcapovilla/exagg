<div id="item-list">
  <div>
    <ul class="item-list list-unstyled">
      {{#each sortedItems as |item|}}
        {{item-element model=item onSelect="selectItem"}}
      {{/each}}
    </ul>
  </div>
  {{infinity-loader infinityModel=model loadingText=(t "loading") loadedText="" scrollable="#item-list"}}
</div>
